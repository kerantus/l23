<h1>Записаться на посещение</h1>

<form actions="writeof" method="POST" role="form">
  #имя
  <div class="form-group">
    <label>Ваше ФИО</label>
    <input name="user_name" type="text" class="form-control time" placeholder="ФИО">
  </div>
  #телефон
  <div class="form-group">
    <label>Ваш телефон</label>
    <input id='name' type="text" class="form-control" name="user_phone" placeholder="Ваш телефон">
  </div>
  #время
  <div class="form-group">
    <label>Время посищения салона</label>
    <input type="datetime" class="form-control time" name="user_time" placeholder="Время посещения">
  </div>
  </br>
  #выбрать мастера
  <div class="form-group">
    <select name="user_master" class="form-group" type="text">
      <option>Мастер 1</option>
      <option>Мастер 2</option>
      <option>Мастер 3</option>
    </select>
  </div>
  </br>
  </div>


  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<script type="text/javascript">
  $('.time').css('color','brown')
  $('#name').css('background-color','blue')

</script>
